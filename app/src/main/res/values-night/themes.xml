<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HouseSharing" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/button_primary_dark</item>
        <item name="colorPrimaryVariant">@color/background_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#D8D8D8</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">#B50F0F</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:elevation">0dp</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:editTextBackground">@drawable/rounded_edit_text_dark</item>
        <item name="android:textAllCaps">false</item>
        <item name="colorSurface">@color/background_dark</item>
    </style>
</resources>