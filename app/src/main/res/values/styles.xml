<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TitleBold" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">36dp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="TitleLight" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:background">@drawable/button_rounded</item>
        <item name="android:padding">15dp</item>
        <item name="backgroundTint">@color/button_primary</item>
    </style>

    <style name="ButtonSecondary" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:background">@drawable/button_rounded</item>
        <item name="android:padding">15dp</item>
        <item name="backgroundTint">@color/button_secondary</item>
    </style>

    <style name="EditText" parent="@android:style/Widget.EditText">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="backgroundTint">@color/edit_text_background</item>
        <item name="android:background">@drawable/edit_text_rounded</item>
    </style>

</resources>