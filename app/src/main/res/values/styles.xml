<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TitleBold" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">36dp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="TitleEditText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">24dp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="TitleLight" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="TitleList" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>


    <style name="ContentNote" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:background">@drawable/button_rounded</item>
        <item name="android:padding">15dp</item>
        <item name="backgroundTint">@color/button_primary</item>
    </style>


    <style name="ButtonSecondary" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:background">@drawable/button_rounded</item>
        <item name="android:padding">15dp</item>
        <item name="backgroundTint">@color/button_secondary</item>
    </style>

    <style name="ButtonWeek" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">10dp</item>
        <item name="backgroundTint">@color/background_button_week</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:minWidth">1dp</item>
    </style>

    <style name="EditText" parent="@android:style/Widget.EditText">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="backgroundTint">@color/edit_text_background</item>
        <item name="android:background">@drawable/edit_text_rounded</item>
    </style>

    <style name="Navbar" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/bottom</item>
        <item name="itemActiveIndicatorStyle">@style/App.Custom.Indicator</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/indicator</item>
    </style>

</resources>